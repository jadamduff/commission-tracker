<div class="container">
  <div class="form_box_md_container">
    <%= form_tag('/sessions') do %>
      <div class="form_box_md">
        <div>
          <%= label_tag :email %>
        </div>
        <%= text_field_tag :email, '', class: 'form_box_md_input_text' %>
        <div>
          <%= label_tag :password %>
        </div>
        <%= password_field_tag :password, '', class: 'form_box_md_input_text' %>
      </div>
      <%= submit_tag 'Login', class: 'form_full_btn' %>
      <p class="instruction_small_gray" style="text-align: center; margin: 20px 0">
        Or, if you are a manager, login with Facebook.
      </p>
      <%= link_to '/auth/facebook', id: 'facebook_btn' do %>
        <div class="facebook_full_btn">
          <span>Login with Facebook</span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
